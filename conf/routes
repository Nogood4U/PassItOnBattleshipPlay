
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET         /                                   controllers.HomeController.index

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                       controllers.Assets.versioned(path="/public", file: Asset)

GET         /auth/authenticate/:provider        @controllers.HomeController.authenticate(provider)

+nocsrf
POST        /auth/logout                        @controllers.HomeController.signOut

GET         /auth/providers                     @controllers.HomeController.providerList

+nocsrf
PUT         /player/:playerId                   @controllers.HomeController.updatePlayer(playerId)

GET         /socket/:uid                        @controllers.WebSocketController.ws(uid)

POST        /game/matchmaking                   @controllers.GameController.joinMatchMaking

POST        /game/reject/:gameId                @controllers.GameController.rejectGameRequest(gameId)

POST        /game/accept/:gameId                @controllers.GameController.acceptGameRequest(gameId)

POST        /game/ready                         @controllers.GameController.readyCheck()
